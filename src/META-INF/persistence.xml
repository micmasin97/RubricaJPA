<?xml version="1.0" encoding="UTF-8"?> 
<persistence version="2.0"  
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"> 
	<persistence-unit name="RubricaJPA" transaction-type="RESOURCE_LOCAL"> 
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>it.advancia.michele.model.Account</class>  
		<class>it.advancia.michele.model.Contatto</class>  
		<class>it.advancia.michele.model.Rubrica</class>  
		
		<properties> 
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/progettojpa?serverTimezone=UTC"/> 
			<property name="javax.persistence.jdbc.user" value="root"/> 
			<property name="javax.persistence.jdbc.password" value="Password"/> 
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/> 
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="show_sql" value="true"/>
		</properties> 
	</persistence-unit> 
</persistence> 